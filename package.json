{
  "name": "sqompare",
  "version": "1.0.0",
  "description": "A modern SQL database structure comparison tool",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:linux-appimage": "electron-builder --linux --config.linux.target=AppImage",
    "build:linux-flatpak": "electron-builder --linux --config.linux.target=flatpak",
    "build:all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "pack:win": "electron-builder --win --dir",
    "pack:mac": "electron-builder --mac --dir",
    "pack:linux": "electron-builder --linux --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --publish=never",
    "dist:mac": "electron-builder --mac --publish=never",
    "dist:linux": "electron-builder --linux --publish=never",
    "clean": "rimraf dist build/output",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "sql",
    "database",
    "comparison",
    "structure"
  ],
  "author": "Sebastian 'tappava' L.",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.10"
  },
  "dependencies": {
    "sql-formatter": "^15.3.2"
  },
  "build": {
    "appId": "com.sqompare.app",
    "productName": "SQompare",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "!src/**/*.{md,txt}",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "package.json"
    ],
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Sebastian 'tappava' L.",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "flatpak",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "desktop": {
        "Name": "SQompare",
        "Comment": "SQL Database Structure Comparison Tool",
        "Keywords": "sql;database;comparison;structure;development;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SQompare"
    },
    "dmg": {
      "title": "SQompare ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
